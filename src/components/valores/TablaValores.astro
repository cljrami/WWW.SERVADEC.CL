---
import WhatsappBtn from "../WhatsApp/WhatsappBtn.astro";

const plans = [
  {
    name: "Administración",
    description: "Ideal para gestionar y optimizar recursos con eficiencia.",
    features: [
      "Gestión de usuarios",
      "Monitoreo en tiempo real",
      "Automatización de tareas",
      "Reportes detallados",
      "Seguridad avanzada",
    ],
    popular: true, // Destaca esta tarjeta
  },
  {
    name: "Auditorías Condominios",
    description: "Análisis detallado y auditorías profesionales.",
    features: [
      "Evaluación financiera",
      "Revisión de contratos",
      "Detección de anomalías",
      "Optimización de recursos",
      "Asesoramiento experto",
    ],
    popular: false,
  },
];
---

<section class="py-20 bg-gray-100 dark:bg-gray-900">
  <div class="max-w-6xl mx-auto px-6 lg:px-8">
    <div class="text-center mb-10">
      <h2 class="text-4xl font-extrabold text-gray-900 dark:text-white">
        Nuestros Servicios
      </h2>
      <p class="text-lg text-gray-600 dark:text-gray-300">
        Selecciona el plan que mejor se adapte a tus necesidades.
      </p>
    </div>

    <div class="grid md:grid-cols-2 gap-8">
      {plans.map((plan) => (
        <div
          class={`relative bg-white dark:bg-gray-800 shadow-xl rounded-xl p-8 border border-gray-200 dark:border-gray-700 transition-transform transform hover:scale-105 ${
            plan.popular ? "ring-2 ring-indigo-500" : ""
          }`}
        >
          {plan.popular && (
            <span
              class="absolute top-4 right-4 bg-indigo-600 text-white text-xs font-bold uppercase px-3 py-1 rounded-full"
            >
              Más Popular
            </span>
          )}

          <h3 class="text-2xl font-bold text-gray-900 dark:text-white mb-3">
            {plan.name}
          </h3>
          <p class="text-gray-600 dark:text-gray-300 mb-4">{plan.description}</p>

          <ul class="space-y-2 mb-6">
            {plan.features.map((feature) => (
              <li class="flex items-center text-gray-700 dark:text-gray-300">
                <svg
                  class="w-5 h-5 text-green-500 mr-2"
                  fill="currentColor"
                  viewBox="0 0 20 20"
                >
                  <path
                    fill-rule="evenodd"
                    d="M16.707 5.293a1 1 0 00-1.414 0L8 12.586l-3.293-3.293a1 1 0 00-1.414 1.414l4 4a1 1 0 001.414 0l8-8a1 1 0 000-1.414z"
                    clip-rule="evenodd"
                  />
                </svg>
                {feature}
              </li>
            ))}
          </ul>

          <!-- Botón de WhatsApp -->
          <div class="text-center">
            <WhatsappBtn phone="1234567890" />
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
