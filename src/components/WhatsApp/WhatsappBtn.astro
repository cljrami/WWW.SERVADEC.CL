---
interface Props {
  phone: string;
  message?: string;
  text?: string;
}

const {
  phone,
  message = "¡Hola! Quisiera más información.",
  text = "Chatea con nosotros",
} = Astro.props;

const encodedMessage = encodeURIComponent(message);
const waLink = `https://wa.me/${phone}?text=${encodedMessage}`;
---

<div class="flex justify-center mt-6">
  <a
    href={waLink}
    target="_blank"
    rel="noopener noreferrer"
    class="flex items-center gap-2 bg-green-500 hover:bg-green-600 text-white font-semibold px-6 py-3 rounded-sm shadow-md transition-all transform hover:scale-105 animate-pulse"
  >
    <i class="fab fa-whatsapp text-xl"></i>
    {text}
  </a>
</div>
