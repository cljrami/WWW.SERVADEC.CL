---
interface Props {
  backgroundImage?: string;
  title?: string;
  subtitle?: string;
  ctaText?: string;
  ctaHref?: string;
}

const {
  backgroundImage = "https://www.custombnb.com.au/wp-content/uploads/2018/09/poolside-apartment-area.jpg",
  title = "Administración Profesional de Condominios",
  subtitle = "Gestión transparente, eficiente y cercana para tu comunidad.",
  ctaText = "Solicita una asesoría gratuita",
  ctaHref = "#contacto",
} = Astro.props;
---

<section
  class="relative h-screen bg-cover bg-right bg-no-repeat text-white flex items-center justify-center"
  style={`background-image: url('${backgroundImage}')`}
>
  <!-- Overlay oscuro para contraste -->
  <div class="absolute inset-0 bg-black/60 z-0"></div>

  <!-- Contenido principal -->
  <div class="relative z-10 text-center max-w-3xl px-6">
    <h1
      class="text-4xl md:text-6xl font-extrabold leading-tight mb-6 drop-shadow-lg"
    >
      {title}
    </h1>
    <p class="text-lg md:text-2xl mb-8 text-gray-100 drop-shadow-sm">
      {subtitle}
    </p>
    <a
      href={ctaHref}
      class="inline-block bg-white text-gray-900 font-semibold px-8 py-3 rounded-full shadow-lg hover:bg-gray-200 transition-transform transform hover:scale-105 duration-300"
    >
      {ctaText}
    </a>
  </div>

  <!-- Scroll hint -->
  <div class="absolute bottom-8 z-10 animate-bounce text-white opacity-70">
    <i class="fas fa-chevron-down text-2xl"></i>
  </div>
</section>
