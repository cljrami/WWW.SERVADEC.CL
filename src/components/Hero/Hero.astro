---
interface Props {
  title?: string;
  subtitle?: string;
  buttonText?: string;
  buttonLink?: string;
  backgroundImage?: string;
  stats?: { value: string; label: string }[];
  logos?: { src: string; alt: string }[];
}

// Valores por defecto
const {
  title = "Liderando la Administración y Auditoría de Condominios",
  subtitle = "Expertos en optimizar la gestión de propiedades con transparencia y eficiencia.",
  buttonText = "Solicita una Consulta",
  buttonLink = "/contacto",
  backgroundImage = "https://images.unsplash.com/photo-1741369425194-94ac3be7d63f?q=80&w=2848&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D",

  logos = [
    { src: "https://source.unsplash.com/100x40/?finance", alt: "Empresa 1" },
    {
      src: "https://source.unsplash.com/100x40/?real-estate",
      alt: "Empresa 2",
    },
    { src: "https://source.unsplash.com/100x40/?consulting", alt: "Empresa 3" },
  ],
} = Astro.props;
---

<section
  class="relative flex items-center justify-center h-screen bg-gray-900 text-white overflow-hidden"
>
  <!-- Fondo con imagen y degradado -->
  <div
    class="absolute inset-0 bg-cover bg-center opacity-60"
    style={`background-image: url('${backgroundImage}')`}
  >
  </div>
  <div
    class="absolute inset-0 bg-gradient-to-b from-black/80 via-black/60 to-gray-900/80"
  >
  </div>

  <!-- Contenido Principal -->
  <div class="relative z-10 text-center max-w-5xl px-6 lg:px-0">
    <h1
      class="text-5xl lg:text-7xl font-extrabold leading-tight animate-fade-in"
    >
      {title}
    </h1>
    <p class="text-lg lg:text-2xl text-gray-300 mt-4 animate-fade-in delay-200">
      {subtitle}
    </p>

    <!-- Botón CTA -->
    <a
      href={buttonLink}
      class="mt-6 inline-block bg-blue-600 hover:bg-blue-700 text-white font-semibold px-10 py-4 rounded-full shadow-xl text-lg transition-all transform hover:scale-110 animate-fade-in delay-400"
    >
      {buttonText}
    </a>

    <!-- Sección de estadísticas -->
  </div>

  <!-- Animaciones y Estilos Extras -->
</section>
