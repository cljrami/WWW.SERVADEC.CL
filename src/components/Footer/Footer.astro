---
// Footer.astro

// Interfaz para los enlaces
interface Link {
  label: string;
  href: string;
}

interface SocialLink {
  icon: string;
  href: string;
}

// Props para personalizar el contenido del footer
const {
  title = "Administración Eficiente de Condominios",
  description = "texto persuasivo de bajada.",
  companyName = "Besnik Creative",
  textoBtn = "texto boton",

  links = [
    { label: "Administración", href: "#" },
    { label: "Auditorías", href: "#" },
    { label: "Contacto", href: "#" },
    { label: "Blog", href: "#" },
  ] as Link[], // Tipar el array de enlaces
  socialLinks = [
    { icon: "fab fa-facebook-f", href: "#" },
    { icon: "fab fa-instagram", href: "#" },
  ] as SocialLink[], // Tipar el array de enlaces de redes sociales
} = Astro.props;

// Fecha automática para el copyright
const currentYear = new Date().getFullYear();
---

<footer
  class="w-full min-h-screen flex items-center justify-center bg-indigo-950 px-4 sm:px-10 dark:text-white"
>
  <div class="md:w-2/3 w-full text-white flex flex-col">
    <!-- Título -->
    <div class="w-full font-bold">
      <h1
        class="w-full md:w-2/3 md:text-5xl text-3xl mt-8 md:mt-10 text-center md:text-left"
        data-aos="zoom-IN"
        data-aos-anchor-placement="top-bottom"
      >
        {title}
      </h1>
    </div>

    <!-- Descripción y botón -->
    <div class="flex flex-col md:flex-row md:justify-between mt-6 md:mt-8">
      <p class="w-full md:w-2/3 text-gray-400 text-center md:text-left">
        {description}
      </p>
      <div
        class="w-full md:w-44 pt-6 md:pt-0 flex justify-center md:justify-end"
      >
        <a
          class="bg-indigo-200 justify-center text-center rounded-lg shadow px-6 py-3 flex items-center text-indigo-800 font-bold"
        >
          {textoBtn}
        </a>
      </div>
    </div>

    <!-- Navegación inferior -->
    <div class="flex flex-col mt-12 md:mt-24">
      <div class="flex flex-col md:flex-row justify-between items-center">
        <div class="text-center md:text-left mb-6 md:mb-0">logo</div>

        <!-- Enlaces principales -->
        <nav
          class="flex flex-col md:flex-row space-y-4 md:space-y-0 md:space-x-8 mb-6 md:mb-0"
        >
          {
            links.map(
              (
                link: Link // Tipar el parámetro `link`
              ) => (
                <a
                  href={link.href}
                  class="text-gray-400 hover:text-white uppercase cursor-pointer text-center md:text-left"
                >
                  {link.label}
                </a>
              )
            )
          }
        </nav>

        <!-- Íconos de redes sociales -->
        <div
          class="flex flex-row space-x-4 items-center justify-center md:justify-end"
        >
          {
            socialLinks.map(
              (
                social: SocialLink // Tipar el parámetro `social`
              ) => (
                <a href={social.href}>
                  <i
                    class={`${social.icon} text-2xl text-gray-400 hover:text-white`}
                  />
                </a>
              )
            )
          }
        </div>
      </div>

      <!-- Línea divisoria -->
      <hr class="border-gray-600 my-6" />

      <!-- Copyright -->
      <p class="w-full text-center text-sm md:text-base text-gray-600 my-6">
        Copyright © {currentYear}
        {companyName}
      </p>
    </div>
  </div>
</footer>
