---
let isDark = false;
const iconMoon = "🌙";
const iconSun = "☀️";

const toggleScript = `
  const html = document.documentElement;
  const toggleBtn = document.getElementById('dark-toggle');

  // Cargar tema guardado
  if (localStorage.theme === 'dark') {
    html.classList.add('dark');
    toggleBtn.innerText = '${iconSun}'; // Mostrar ícono de sol
  } else {
    toggleBtn.innerText = '${iconMoon}'; // Mostrar ícono de luna
  }

  toggleBtn?.addEventListener('click', () => {
    html.classList.toggle('dark');
    const isDark = html.classList.contains('dark');
    toggleBtn.innerText = isDark ? '${iconSun}' : '${iconMoon}';
    localStorage.setItem('theme', isDark ? 'dark' : 'light');
  });
`;
---

<!-- Botón de modo oscuro -->
<button
  id="dark-toggle"
  class="px-4 py-2 rounded transition-colors duration-300 bg-gray-200 dark:bg-gray-800 text-black dark:text-white"
  aria-label="Toggle Dark Mode"
>
  🌙
</button>

<!-- Script para manejar el estado -->
<script is:inline>
  {
    toggleScript;
  }
</script>
