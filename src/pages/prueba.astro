---

<Layout
  title={pageTitle}
  description={pageDescription}
  seo={{
    openGraph: {
      basic: {
        title: pageTitle,
        type: "website",
        image: "https://www.tuempresa.com/images/home-banner.jpg",
        url: "https://www.tuempresa.com/",
      },
      optional: {
        description: pageDescription,
        siteName: "Nombre de la Empresa",
        locale: "es_ES",
      },
    },
    twitter: {
      card: "summary_large_image",
      site: "@tuempresa",
      creator: "@tuempresa",
      title: pageTitle,
      description: pageDescription,
      image: "https://www.tuempresa.com/images/home-banner.jpg",
